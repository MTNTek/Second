{
  "name": "perry-eden-group",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "db:init": "node scripts/init-db-simple.js",
    "test:api": "node scripts/test-api.js",
    "status": "node scripts/status-tracker.js progress",
    "status:report": "node scripts/status-tracker.js report",
    "status:markdown": "node scripts/status-tracker.js markdown",
    "status:next": "node scripts/status-tracker.js next",
    "analyze": "ANALYZE=true npm run build",
    "build:production": "NODE_ENV=production npm run build",
    "start:production": "NODE_ENV=production npm start",
    "deploy:check": "node scripts/deploy-check.js",
    "performance:audit": "node scripts/performance-audit.js",
    "db:setup": "node scripts/postgresql-setup.js",
    "db:cloud-setup": "node scripts/cloud-database-setup.js",
    "db:docker": "docker-compose -f docker-compose.postgres.yml up -d",
    "db:docker-stop": "docker-compose -f docker-compose.postgres.yml down",
    "db:docker-logs": "docker-compose -f docker-compose.postgres.yml logs postgres",
    "db:prod-migrate": "node -e \"require('./src/lib/database-migration.js').runMigrationCLI()\" migrate",
    "db:prod-status": "node -e \"require('./src/lib/database-migration.js').runMigrationCLI()\" status",
    "security:check": "npm audit && node scripts/deploy-check.js",
    "prod:setup": "npm run deploy:check && npm run build:production",
    "docker:build": "docker build -t perry-eden-group .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production perry-eden-group"
  },
  "dependencies": {
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.0",
    "bcryptjs": "^3.0.2",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "express-rate-limit": "^8.0.1",
    "express-slow-down": "^3.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.344.0",
    "multer": "^2.0.2",
    "next": "^14.0.0",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.5",
    "pg": "^8.16.3",
    "postgres": "^3.4.7",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^15.4.6",
    "@playwright/test": "^1.54.2",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.0.0",
    "@types/pg": "^8.15.5",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.18",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1",
    "tsx": "^4.20.4",
    "typescript": "^5.5.3",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
