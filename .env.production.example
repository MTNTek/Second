# Production Environment Configuration for Perry Eden Group
# Copy this file to .env.production and fill in your production values

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Production Database
DB_HOST=your-production-database-host.com
DB_PORT=5432
DB_NAME=perry_eden_group_prod
DB_USER=your-db-username
DB_PASSWORD=your-secure-db-password
DB_MAX_CONNECTIONS=20
DB_IDLE_TIMEOUT=30000
DB_CONNECTION_TIMEOUT=5000

# Database SSL Configuration
DB_SSL=true
DB_SSL_REJECT_UNAUTHORIZED=false

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# JWT Authentication
JWT_SECRET=your-super-secure-jwt-secret-at-least-32-characters-long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-refresh-token-secret-different-from-jwt-secret

# Session Configuration
SESSION_SECRET=your-session-secret-for-express-sessions
SESSION_SECURE=true
SESSION_SAME_SITE=strict

# CSRF Protection
CSRF_SECRET=your-csrf-secret-for-cross-site-request-forgery-protection

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
SLOW_DOWN_WINDOW_MS=900000
SLOW_DOWN_DELAY_AFTER=50
SLOW_DOWN_DELAY_MS=500

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

# SMTP Configuration for production emails
SMTP_HOST=your-smtp-host.com
SMTP_PORT=587
SMTP_SECURE=true
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password

# Email addresses
FROM_EMAIL=noreply@perryedengroup.com
ADMIN_EMAIL=admin@perryedengroup.com
CONTACT_EMAIL=contact@perryedengroup.com

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================

# AWS S3 Configuration for file uploads
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=perry-eden-group-uploads

# Alternative: Local file storage
UPLOAD_DIR=/var/www/perry-eden-group/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=pdf,doc,docx,jpg,jpeg,png

# =============================================================================
# EXTERNAL API CONFIGURATION
# =============================================================================

# Payment Processing (if needed in future)
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Google reCAPTCHA
RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# =============================================================================
# MONITORING AND LOGGING
# =============================================================================

# Application Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
SENTRY_ENVIRONMENT=production

# Performance Monitoring
NEW_RELIC_LICENSE_KEY=your-new-relic-license-key
NEW_RELIC_APP_NAME=Perry Eden Group

# Log Level Configuration
LOG_LEVEL=error
LOG_FORMAT=json

# =============================================================================
# CACHE CONFIGURATION
# =============================================================================

# Redis Configuration (for advanced caching)
REDIS_HOST=your-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=your-redis-password
REDIS_DB=0

# In-Memory Cache Settings
CACHE_TTL=300000
CACHE_MAX_SIZE=1000

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Next.js Configuration
NEXTAUTH_URL=https://perryedengroup.com
NEXTAUTH_SECRET=your-nextauth-secret-for-authentication

# Application URLs
NEXT_PUBLIC_APP_URL=https://perryedengroup.com
NEXT_PUBLIC_API_URL=https://perryedengroup.com/api

# CORS Configuration
CORS_ORIGINS=https://perryedengroup.com,https://www.perryedengroup.com

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================

# SSL Certificate paths (if using custom certificates)
SSL_CERT_PATH=/etc/ssl/certs/perryedengroup.com.crt
SSL_KEY_PATH=/etc/ssl/private/perryedengroup.com.key

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================

# Database Backup Settings
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=perry-eden-group-backups

# =============================================================================
# ANALYTICS AND TRACKING
# =============================================================================

# Google Analytics
NEXT_PUBLIC_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Google Tag Manager
NEXT_PUBLIC_GTM_ID=GTM-XXXXXXX

# Facebook Pixel
NEXT_PUBLIC_FACEBOOK_PIXEL_ID=your-facebook-pixel-id

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable/Disable features in production
FEATURE_USER_REGISTRATION=true
FEATURE_FILE_UPLOADS=true
FEATURE_EMAIL_NOTIFICATIONS=true
FEATURE_SMS_NOTIFICATIONS=false
FEATURE_PAYMENT_PROCESSING=false

# =============================================================================
# HEALTH CHECK CONFIGURATION
# =============================================================================

# Health check endpoints
HEALTH_CHECK_TOKEN=your-health-check-secret-token
HEALTH_CHECK_TIMEOUT=5000

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================

# Build Configuration
NODE_ENV=production
ANALYZE=false

# CDN Configuration
NEXT_PUBLIC_CDN_URL=https://cdn.perryedengroup.com

# Asset Optimization
NEXT_PUBLIC_OPTIMIZE_IMAGES=true
NEXT_PUBLIC_OPTIMIZE_FONTS=true

# =============================================================================
# SECURITY HEADERS
# =============================================================================

# Content Security Policy customization
CSP_SCRIPT_SRC_ADDITIONAL=
CSP_STYLE_SRC_ADDITIONAL=
CSP_IMG_SRC_ADDITIONAL=

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================

# CRM Integration (if needed)
CRM_API_URL=
CRM_API_KEY=

# Document Verification Services
DOCUMENT_VERIFICATION_API_KEY=
DOCUMENT_VERIFICATION_ENDPOINT=

# SMS Service (Twilio, etc.)
SMS_SERVICE_SID=
SMS_AUTH_TOKEN=
SMS_FROM_NUMBER=

# =============================================================================
# DEVELOPMENT OVERRIDES (Remove in production)
# =============================================================================

# Keep these commented out in production
# DEBUG=false
# VERBOSE_LOGGING=false
# SKIP_EMAIL_VERIFICATION=false
